{
    "id" : "com.github.binudakal.ur",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "ur",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "ur",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git"
                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ],
            "builddir" : true
        }
    ],
    "build-options" : {
        "env" : {        }
    }
}
