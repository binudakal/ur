                    </child>
                    <child>
                      <object class="GtkButton" id="LTile2">
                        <property name="sensitive">false</property>
                        <layout>
                          <property name="row">2</property>
                          <property name="column">0</property>
                        </layout>

                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="LTile3">
                        <property name="sensitive">false</property>
                        <layout>
                          <property name="row">1</property>
                          <property name="column">0</property>
                        </layout>

                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="LTile4">
                        <property name="sensitive">false</property>
                        <layout>
                          <property name="row">0</property>
                          <property name="column">0</property>
                        </layout>

                      </object>
                    </child>

                    <!-- RIGHT TILES -->
                    <child>
                    <object class="GtkButton" id="RTile0">
                        <property name="sensitive">False</property>
                        <property name="has-frame">False</property>
                        <layout>
                          <property name="row">4</property>
                          <property name="column">2</property>
                        </layout>

                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="RTile1">
                        <property name="sensitive">false</property>
                        <layout>
                          <property name="row">3</property>
                          <property name="column">2</property>
                        </layout>

                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="RTile2">
                        <property name="sensitive">false</property>
                        <layout>
                          <property name="row">2</property>
                          <property name="column">2</property>
                        </layout>

                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="RTile3">
                        <property name="sensitive">false</property>
                        <layout>
                          <property name="row">1</property>
                          <property name="column">2</property>
                        </layout>

                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="RTile4">
                        <property name="sensitive">false</property>
                        <layout>
                          <property name="row">0</property>
                          <property name="column">2</property>
                        </layout>

                      </object>
                    </child>


