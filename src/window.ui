            <child>
              <object class="GtkBox" id="infoBar">
                <property name="margin-start">0</property>
                <child>
                  <object class="GtkGrid">
                    <property name="row-spacing">50</property>
                    <child>
                      <object class="GtkSeparator">
                            <property name="margin-bottom">200</property>
                            <layout>
                              <property name="row">-1</property>
                              <property name="column">-1</property>
                            </layout>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="titleText">
                        <property name="wrap" translatable="no">true</property>
                        <property name="width-chars">25</property>
                        <property name="label">Player 1's turn</property>
                        <layout>
                          <property name="row">1</property>
                          <property name="column">0</property>
                        </layout>
                        <style>
                            <class name="title-1"></class>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="diceText">
                            <property name="wrap" translatable="no">true</property>
                            <property name="width-chars">25</property>
                            <property name="label">Dice updates here</property>
                            <layout>
                              <property name="row">2</property>
                              <property name="column">0</property>
                            </layout>
                      </object>
                    </child>
                    <!-- <child> -->
                    <!--   <object class="GtkButton" id="enableButtons"> -->
